<p id="notice"><%= notice %></p>
<div id="profile">
<div id="form">
<h1>Fields</h1>
<%= link_to 'Add a new field', new_field_path , :class=>"btn btn-info"%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
     
        <td><%= link_to field do %>
        <i class="far fa-eye"></i>
        <%end%>
        </td>
        <td><%= link_to edit_field_path(field) do %>
        <i class="far fa-edit"></i>
        <%end%>
        </td>
        <td><%= link_to field, method: :delete, data: { confirm: 'Are you sure?' } do%>
        <i class="far fa-trash-alt"></i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>