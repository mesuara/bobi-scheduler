<div id="form">
<p>
  <strong>Name:</strong>
  <%= @field.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @field.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @field.street %>
  <%= @field.city %>
  <%= @field.state %>
  <%= @field.zip %>
</p>

<p>
  <strong>Open</strong>
  <%= @field.open%>
</p>

<p>
  <strong>Close</strong>
  <%= @field.close%>
