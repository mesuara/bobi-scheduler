<!DOCTYPE html>
<html>
  <head>
    <title>BobiScheduler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.css">
    
  
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
         <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

      
      <header class="ui top fixed menu">
      <% if !current_user %>
        <div class="ui buttons">
            <a href="/users/sign_in"><button class="ui olive button">Sign in</button></a>
            <div class="or"></div>
            <a href="/users/sign_up"><button class="ui olive button">Sign up</button></a>

        </div>
        <%else%>
         <div class="ui buttons">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete , :class => "ui olive button"%>
            </div>
      
      <% end %>
        </header>
    <%= yield %>
    
       
      <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.js"></script>
     
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.js"> </script>
       <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/animation.gsap.js"></script>
  </body>
</html>
